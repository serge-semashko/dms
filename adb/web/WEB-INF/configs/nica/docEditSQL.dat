set sum_children=(select sum(summa_rub) from docs c where c.pid=#DOC_ID# and c.DOC_STATUS <> 5)
,num_children=(select count(doc_id) from docs c where c.pid=#DOC_ID#  and c.DOC_STATUS <> 5)
