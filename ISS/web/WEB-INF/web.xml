<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <session-config>
        <session-timeout>720</session-timeout>
    </session-config>
    <filter-mapping>
        <filter-name>IPFilter</filter-name>
        <servlet-name>Gateway</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>Dispatcher</servlet-name>
        <servlet-class>myiss.mainServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Gateway</servlet-name>
        <servlet-class>jinr.iss.gateway.Servlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>mainjsp</servlet-name>
        <jsp-file>/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>mainjsp</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/iss</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/refreshusers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/oauth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Gateway</servlet-name>
        <url-pattern>/gw</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>IPFilter</filter-name>
        <filter-class>myiss.IPFilter</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>IPFilter</filter-name>
        <servlet-name>Dispatcher</servlet-name>
    </filter-mapping>
    <error-page>
        <error-code>403</error-code>
        <location>/forbidden.html</location>
    </error-page>
</web-app>
