$INCLUDE [OK report header]  ??USER_ID>0|USER_ID<0
[end]


[OK report header]
$SET_PARAMETERS srn=1; rpp=9999; 
<table class="tlist tblue" cellspacing=0>
<tr>
<th> </th>
<th>Протокол №</th>
<th>Создан</th>

