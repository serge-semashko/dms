1. Создаем 2 поля в таблице данных:
 - fieldname varchar(1024) - поле файла
 - fieldname_id varchar(11) - ID файла


[add files fields]
    alter table #DATA_TABLE# add column #new_db_field_name# varchar(1024) DEFAULT NULL COMMENT '#name#';
    alter table #DATA_TABLE# add column #new_db_field_name#_id varchar(11) DEFAULT NULL COMMENT 'ID файла - #name#';
[end]


[drop files fields]
    try: alter table #DATA_TABLE# drop column #old_db_field_name#;
    try: alter table #DATA_TABLE# drop column #old_db_field_name#_id;

    delete from d_fields where type_id=#type_id# and field_db_name='#old_db_field_name#';
[end]

[update files fields]
    alter table #DATA_TABLE# change column #old_db_field_name# #new_db_field_name# varchar(1024) DEFAULT NULL COMMENT '#name#';
    alter table #DATA_TABLE# change column #old_db_field_name#_id #new_db_field_name#_id varchar(11) DEFAULT NULL COMMENT 'ID файла - #name#';

    update d_fields set name='#name#', field_db_name='#new_db_field_name#' where type_id=#type_id# and field_db_name='#old_db_field_name#';
[end]


