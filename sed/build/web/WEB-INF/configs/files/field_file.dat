    /**
     * Выполнить операцию с файлом:
     * cop=delete - спросить и удалить,
     * cop=
     * 
     */
    var fileOper = function(file_id, cop, field_id, file_list){
        var targetDiv = "";
        if(field_id == "") {
            targetDiv="doc_files_list-view"; 
        }   
        else
            targetDiv = field_id + "-view";
        if(cop == 'delete'){
            $('##file_' + file_id).addClass('bg_red');
            if(!confirm ('Удалить файл?')) {
                $('##file_' + file_id).removeClass('bg_red')
                return;
            }
        }
        AjaxCall(targetDiv, "c=files/file_oper&file_id=" + file_id + "&cop=" + cop + "&field_id=" + field_id + "&file_list=" + file_list, true); 
    }

    /**
     * Обновить список файлов
     */
    var refreshFilesList = function(field_id, msg){
        var targetDiv = "";
        if(field_id == "") {
            targetDiv="doc_files_list-view"; 
            file_list = "list";
        }   
        else
            targetDiv = field_id + "-view";
        var m = "";
        if(msg)
            m = "&msg=" + msg;
        AjaxCall(targetDiv, "c=files/file_list&doc_id=#doc_id#&field_id=" + field_id + m , true); 
    }

    /**
     * Показать / скрыть форму редактирования комментария к файлу,
     * сохранить комментарий.
     */
    var editFileComment = function(file_id, cop){
        if (!cop) {
            $("##file_comment_edit_" + file_id).show();
            $("##file_comment_" + file_id).hide();
            return;
        }
        else if(cop === 'cancel') {
            $("##file_comment_edit_" + file_id).hide();
            $("##file_comment_" + file_id).show();
        }
        else if(cop === 'save') {
            var c = $("##file_comment_" + file_id + "_text").val();
            editFileComment(file_id, 'cancel'); ??
            AjaxCall("file_comment_edit_" + file_id, "c=files/file_oper&cop=comment&file_id=" + file_id + "&comment=" + c , true); 
        }
    }
</script>
[end]


