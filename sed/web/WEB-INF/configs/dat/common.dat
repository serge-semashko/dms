var keyUpHandler = function(e){
    var charCode = (e.charCode ? e.charCode : e.keyCode);
    log(3, "KeyUp: nextChar=" + nextChar + " / charCode=" + charCode);  ??
    if(charCode <21 && charCode != 8) return;
if(nextChar=="") {
