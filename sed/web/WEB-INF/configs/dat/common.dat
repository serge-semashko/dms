}


var keyPressHandler = function(e){
    log(3, "checkCapsLock...");  ??
    if (!e) return;
    var charCode = (e.charCode ? e.charCode : e.keyCode);
    log(3, "checkCapsLock: charCode=" + charCode);  ??
    if (charCode > 31) {
        nextChar = String.fromCharCode(charCode);
        pw2 += nextChar;
        pwv = "";
        for (i=0; i<pw2.length; i++)
            pwv += "*";
    }
    else {
        nextChar = "";
        pw2 = ""; 
        pwv = "";
    }
    if(e.which == 0) {
        nextChar = "";
        pw2 = ""; 
        pwv = "";
    }
    log(3, "KeyPress:" + charCode + " / " + nextChar + " / " + e.which + " / " + pw2); ??
    var capsLock = false;
    var isMac = /Mac/.test(navigator.platform);
    if (charCode >= 97 && charCode <= 122){
      capsLock = e.shiftKey;
    } else if (charCode >= 65 && charCode <= 90 && !(e.shiftKey && isMac)){
      capsLock = !e.shiftKey;
    }
    if(capsLock) $("##capsLock_on").show(); else $("##capsLock_on").hide();
    var lang = (charCode > 127);
    if(lang) $("##lang_rus").show(); else $("##lang_rus").hide();
}
[end]

